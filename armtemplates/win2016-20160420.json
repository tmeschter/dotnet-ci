{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "newVMName": {
      "type": "string",
      "defaultValue": "win2016-vs2017"
    },
    "labName": {
      "type": "string",
      "defaultValue": "DDJenkinsDTL"
    },
    "size": {
      "type": "string",
      "defaultValue": "Standard_DS1_v2"
    },
    "userName": {
      "type": "string",
      "defaultValue": "dotnet-bot"
    },
    "password": {
      "type": "securestring"
    },
    "Visual_Studio_2017_Public_Release_(Read_CustomWorkloads_Description).WorkLoads": {
      "type": "string",
      "defaultValue": "all"
    },
    "Visual_Studio_2017_Public_Release_(Read_CustomWorkloads_Description).CustomWorkloads": {
      "type": "string",
      "defaultValue": ""
    },
    "Visual_Studio_2017_Public_Release_(Read_CustomWorkloads_Description).Sku": {
      "type": "string",
      "defaultValue": "Enterprise"
    }
  },
  "variables": {
    "labSubnetName": "[concat(variables('labVirtualNetworkName'), 'Subnet')]",
    "labVirtualNetworkId": "[resourceId('Microsoft.DevTestLab/labs/virtualnetworks', parameters('labName'), variables('labVirtualNetworkName'))]",
    "labVirtualNetworkName": "[concat('Dtl', parameters('labName'))]",
    "vmId": "[resourceId ('Microsoft.DevTestLab/labs/virtualmachines', parameters('labName'), parameters('newVMName'))]",
    "vmName": "[concat(parameters('labName'), '/', parameters('newVMName'))]"
  },
  "resources": [
    {
      "apiVersion": "2016-05-15",
      "type": "Microsoft.DevTestLab/labs/virtualmachines",
      "name": "[variables('vmName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "labVirtualNetworkId": "[variables('labVirtualNetworkId')]",
        "notes": "Windows Server 2016 Datacenter",
        "galleryImageReference": {
          "offer": "WindowsServer",
          "publisher": "MicrosoftWindowsServer",
          "sku": "2016-Datacenter",
          "osType": "Windows",
          "version": "latest"
        },
        "size": "[parameters('size')]",
        "userName": "[parameters('userName')]",
        "password": "[parameters('password')]",
        "isAuthenticationWithSshKey": false,
        "artifacts": [
          {
            "artifactId": "[resourceId('Microsoft.DevTestLab/labs/artifactSources/artifacts', parameters('labName'), 'privaterepo719', 'windows-cmake')]"
          },
          {
            "artifactId": "[resourceId('Microsoft.DevTestLab/labs/artifactSources/artifacts', parameters('labName'), 'privaterepo719', 'Windows-JRE')]"
          },
          {
            "artifactId": "[resourceId('Microsoft.DevTestLab/labs/artifactSources/artifacts', parameters('labName'), 'privaterepo719', 'windows-vs-willowreleased')]",
            "parameters": [
              {
                "name": "WorkLoads",
                "value": "[parameters('Visual_Studio_2017_Public_Release_(Read_CustomWorkloads_Description).WorkLoads')]"
              },
              {
                "name": "CustomWorkloads",
                "value": "[parameters('Visual_Studio_2017_Public_Release_(Read_CustomWorkloads_Description).CustomWorkloads')]"
              },
              {
                "name": "Sku",
                "value": "[parameters('Visual_Studio_2017_Public_Release_(Read_CustomWorkloads_Description).Sku')]"
              }
            ]
          },
          {
            "artifactId": "[resourceId('Microsoft.DevTestLab/labs/artifactSources/artifacts', parameters('labName'), 'privaterepo719', 'Windows-Python27')]"
          },
          {
            "artifactId": "[resourceId('Microsoft.DevTestLab/labs/artifactSources/artifacts', parameters('labName'), 'public repo', 'windows-notepadplusplus')]"
          },
          {
            "artifactId": "[resourceId('Microsoft.DevTestLab/labs/artifactSources/artifacts', parameters('labName'), 'public repo', 'windows-git')]"
          }
        ],
        "labSubnetName": "[variables('labSubnetName')]",
        "disallowPublicIpAddress": true,
        "storageType": "Premium",
        "allowClaim": false,
        "networkInterface": {
          "sharedPublicIpAddressConfiguration": {
            "inboundNatRules": [
              {
                "transportProtocol": "tcp",
                "backendPort": 3389
              }
            ]
          }
        }
      }
    }
  ],
  "outputs": {
    "labVMId": {
      "type": "string",
      "value": "[variables('vmId')]"
    }
  }
}
